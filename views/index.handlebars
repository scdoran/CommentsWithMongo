<h1></h1>
<hr>
<div id="wrapper">
	<div class="col">
		<h2>Articles</h2>

		<ul>
			{{#each article}}
				<li>
				{{#each this.comment}}
					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devoured">
						<button type="submit">{{this.burger_name}}</button>
					</form>

					<form action="/{{this.id}}?_method=DELETE" method="POST">
						<input type="hidden" name="delete" value="true">
						<button type="submit" class="btn btn-danger">X</button>
					</form>
				</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>

</div>

<div id="add">

	<h2>Add a Burger!</h2>

	<form class="create-update-form" action="/" method="POST">
		<div class="form-group">
			<label>Burger Name:</label>
			<input type="text" name="burger_name">

			<form action="/{{this.id}}?_method="POST">
				<input type="hidden" name="comment">
				<button id="burger" type="submit">Add Burger</button>
			</form>
		</div>

		
	</form>
</div>